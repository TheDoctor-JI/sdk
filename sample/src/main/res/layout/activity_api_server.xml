<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".ApiServerActivity">

    <!-- Talking Face Video in the center -->
    <VideoView
        android:id="@+id/vvTalkingFace"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp" />

    <!-- API Server Status Text -->
    <TextView
        android:id="@+id/tvServerStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/vvTalkingFace"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="API Server Running on Port 7755"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Server IP Information -->
    <TextView
        android:id="@+id/tvServerInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vvTalkingFace"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Access API at: http://ROBOT_IP:7755"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:gravity="center" />

    <!-- Control Buttons at the bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Back to Main"
            android:textColor="@android:color/white"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp" />

        <Button
            android:id="@+id/btnStopServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="Stop Server"
            android:textColor="@android:color/white"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp" />

    </LinearLayout>

    <!-- Debug info in top corner -->
    <TextView
        android:id="@+id/tvDebugInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:text="Animation: Stopped"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:alpha="0.7" />

</RelativeLayout>
